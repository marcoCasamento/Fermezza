@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Registrazione";
}

<h1>@ViewData["Title"]</h1>
<h4 id="external-login-title">Associa il tuo @Model.ProviderDisplayName account.</h4>
<hr />

<p id="external-login-description" class="text-info">
    Ti sei autenticato con  <strong>@Model.ProviderDisplayName</strong>.
    Inserisci il tuo indirizzo email per questo sito, e clicca il tasto "Registra" per completare la registrazione.
    Ricordati di contattare l'amministratore di condominio indicando la mail che inserisci sotto per farti autorizzare l'accesso
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
